---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import Image from '~/components/common/Image.astro';
import { getHomePermalink } from '~/utils/blog-permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;

// Map footer titles to i18n keys
const titleToI18nKey: Record<string, string> = {
  'Giới thiệu': 'nav.about',
  'Dịch vụ': 'nav.services',
  'Tin tức': 'nav.news',
  'Liên hệ': 'nav.contact',
};

// Map footer link texts to i18n keys
const linkTextToI18nKey: Record<string, string> = {
  'Về chúng tôi': 'about.aboutUs',
  'Lịch sử thành lập': 'about.history',
  'Luật sư và cộng sự': 'about.lawyers',
  'Giải thưởng pháp lý': 'about.awards',
  'Cảm nhận khách hàng': 'about.testimonials',
  'Tôn chỉ hoạt động': 'about.principles',
  'Hồ sơ năng lực': 'about.capabilities',
  'Tầm nhìn - sứ mệnh': 'about.vision',
  'Sự kiện nội bộ': 'about.internalEvents',
  'Bảo vệ dữ liệu cá nhân': 'about.dataProtection',
  'Dịch vụ của Y&P': 'footer.servicesYP',
  'Pháp lý': 'nav.legal',
  'Tư vấn thường xuyên': 'nav.consultation',
  'Lao động': 'nav.labor',
  'Đầu tư và Người nước ngoài': 'footer.investmentForeign',
  'Dịch vụ đánh giá': 'nav.evaluation',
  'Tin tức pháp lý': 'news.legal',
  'Bình luận pháp lý': 'news.commentary',
  'Các vụ việc nổi bật': 'news.highlights',
  'Hội thảo pháp lý': 'news.seminars',
  'Văn bản pháp lý': 'news.documents',
  'Liên hệ tư vấn': 'news.contact',
  'Thông tin tuyển dụng': 'news.recruitment',
  'Điều khoản chung': 'footer.terms',
  'Chính sách Bảo vệ dữ liệu': 'footer.privacy',
};
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose notranslate']} translate="no">
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300 intersect-once intersect-quarter intercept-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
  >
    <div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-2">
          <a class="inline-block font-bold text-xl" href={getHomePermalink()}>
            <span data-i18n="homepage.companyPrefix">Công ty Luật TNHH</span> <span class="text-accent dark:text-white highlight notranslate" translate="no">Youth </span><span class="text-primary dark:text-white highlight notranslate" translate="no">& Partners</span> <span data-i18n="homepage.companySuffix"></span>
          </a>
        </div>
        <div class="mb-2">
          <span class="text-sm font-normal" data-i18n="company.director">Giám đốc, người đại diện theo pháp luật:</span><br />
          <span class="font-semibold" data-i18n="company.directorName">Luật sư Nguyễn Văn Thành</span><br />
          <span class="text-sm font-normal"><span data-i18n="company.email">Email</span>: <a href="mailto:contact@yplawfirm.vn">contact@yplawfirm.vn</a></span
          ><br />
          <span class="text-sm font-normal"><span data-i18n="company.hotline">Hotline</span>: <a href="tel:0889956888">088 995 6888</a></span><br />
          <span class="text-sm font-normal" data-i18n="company.addressHanoi"
            >Hà Nội: P219, Tháp Đông, Chung cư Học viện Quốc Phòng, phường Nghĩa Đô, thành phố Hà Nội.</span
          ><br />
          <span class="text-sm font-normal" data-i18n="company.addressBacNinh">Bắc Ninh: Số 26 Đoàn Trần Nghiệp, phường Kinh Bắc, tỉnh Bắc Ninh.</span><br
          />
          <span class="text-sm font-normal" data-i18n="company.addressPhuTho"
            >Phú Thọ: Số 170, đường Nguyễn Văn Linh, phường Vĩnh Phúc, tỉnh Phú Thọ.</span
          ><br />
          <div class="footer-cert">
            <a href="http://online.gov.vn/Home/WebDetails/138300" 
              target="_blank" rel="noopener" class="bct-link">
                <Image 
                  src="~/assets/images/youth and partners/logo-bocongthuong.png" 
                  width={150}
                  height={57}
                  alt="Đã thông báo Bộ Công Thương" 
                  class="bct-logo"
                  layout="fixed"
                  loading="lazy"
                  format="webp"
                />
            </a>
        </div>
        </div>
        <div class="text-sm text-muted flex gap-1">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 ? ' · ' : ''}
                <a
                  class="text-muted hover:text-gray-700 dark:text-gray-400 hover:underline transition duration-150 ease-in-out"
                  href={href}
                  data-i18n={text ? linkTextToI18nKey[text] : undefined}
                  set:html={text}
                />
              </>
            ))
          }
        </div>
      </div>
      {
        links.map(({ title, links }) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2">
            <div class="dark:text-gray-300 font-medium mb-2" data-i18n={title ? titleToI18nKey[title] : undefined}>{title}</div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul class="text-sm">
                {links.map(({ text, href, ariaLabel }) => (
                  <li class="mb-2">
                    <a
                      class="text-muted hover:text-gray-700 hover:underline dark:text-gray-400 transition duration-150 ease-in-out"
                      href={href}
                      aria-label={ariaLabel}
                      data-i18n={text ? linkTextToI18nKey[text] : undefined}
                    >
                      <Fragment set:html={text} />
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>
    <div class="md:flex md:items-center md:justify-between py-6 md:py-8">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0 rtl:ml-0 rtl:-mr-2 rtl:md:ml-0 rtl:md:mr-4">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class="text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
                  aria-label={ariaLabel}
                  href={href}
                >
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
          </ul>
        ) : (
          ''
        )
      }

      <div class="text-sm mr-4 dark:text-muted">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>
