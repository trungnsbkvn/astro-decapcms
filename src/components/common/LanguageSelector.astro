// Map Google Translate codes to i18n codes
// Google Translate uses 'zh-CN' but our translations use 'zh'
const gtToI18nMap: Record<string, string> = {
  'zh-CN': 'zh',
  'en': 'en',
  'ja': 'ja',
  'ko': 'ko',
  'vi': 'vi',
};

function getTranslation(lang: string, key: string): string | null {
  // Convert Google Translate code to i18n code if needed
  const i18nLang = gtToI18nMap[lang] || lang;
  
  // The translations object is structured as: translations[section][i18nLang][key]
  const keys = key.split('.');
  if (keys.length !== 2) return null;
  
  const [section, subKey] = keys;
  const sectionData = (translations as any)[section];
  if (!sectionData) return null;
  
  const langData = sectionData[i18nLang];
  if (!langData) return null;
  
  // Use explicit undefined check to allow empty strings
  const value = langData[subKey];
  return value !== undefined ? value : null;
}

// Normalize text for comparison (remove extra whitespace, line breaks)
function normalizeText(text: string): string {
  return text.replace(/\s+/g, ' ').trim();
}

// Create normalized map for partial matching
const normalizedTextMap: Map<string, string> = new Map();
Object.entries(textToKeyMap).forEach(([text, key]) => {
  normalizedTextMap.set(normalizeText(text), key);
});

function translateTextNode(node: Text, lang: string): boolean {
  const text = node.textContent?.trim();
  if (!text) return false;

  // Strip leading bullets and special characters for matching
  const cleanText = text.replace(/^[â€¢Â·\-\*\u2022\u2023\u25E6\u2043\u2219]\s*/, '').trim();

  // Try exact match first
  let key = textToKeyMap[text] || textToKeyMap[cleanText];
  
  // If no exact match, try normalized match
  if (!key) {
    const normalizedText = normalizeText(text);
    const normalizedCleanText = normalizeText(cleanText);
    key = normalizedTextMap.get(normalizedText) || normalizedTextMap.get(normalizedCleanText) || '';
    
    // If still no match, try partial match for longer texts (>50 chars)
    if (!key && text.length > 50) {
      for (const [mapText, mapKey] of Object.entries(textToKeyMap)) {
        const normalizedMapText = normalizeText(mapText);
        // Check if the text starts with the same content (for truncated matches)
        if (normalizedText.startsWith(normalizedMapText.substring(0, 50)) ||
            normalizedMapText.startsWith(normalizedText.substring(0, 50))) {
          key = mapKey;
          break;
        }
      }
    }
  }
  
  if (key) {
    const translation = getTranslation(lang, key);
    if (translation && node.textContent) {
      // Preserve leading bullet if original had one
      const leadingBullet = text.match(/^[â€¢Â·\-\*\u2022\u2023\u25E6\u2043\u2219]\s*/);
      node.textContent = leadingBullet ? leadingBullet[0] + translation : translation;
      return true;
    }
  }
  return false;
}

function translateElement(element: Element, lang: string, forceTranslate: boolean = false): void {
  // Skip user-content (handled by Google Translate)
  if (element.classList.contains('user-content') || element.hasAttribute('data-user-content')) {
    return;
  }

  // If forceTranslate is false, skip text-matching entirely
  // Only data-i18n attributes will be used (handled by applyTranslations)
  if (!forceTranslate) {
    return;
  }

  // When forceTranslate is true (for header/footer), we DO translate even notranslate elements
  // because notranslate is for Google Translate, not our i18n system

  const walker = document.createTreeWalker(element, NodeFilter.SHOW_TEXT);
  while (walker.nextNode()) {
    const node = walker.currentNode as Text;
    const parent = node.parentElement;
    // Skip if parent is user-content or has data-i18n (handled separately)
    if (parent?.closest('.user-content, [data-user-content]')) continue;
    if (parent?.hasAttribute('data-i18n')) continue;
    translateTextNode(node, lang);
  }
}

function applyTranslations(lang: string): void {
  if (lang === 'vi') {
    document.documentElement.classList.remove('i18n-loading');
    return;
  }

  // First, translate all elements with data-i18n attributes (highest priority)
  const i18nElements = document.querySelectorAll('[data-i18n]');
  
  i18nElements.forEach(el => {
    const key = el.getAttribute('data-i18n');
    if (key) {
      const translation = getTranslation(lang, key);
      // Use != null to allow empty strings (e.g., companyPrefix in English should be empty)
      if (translation != null) {
        // Check if the element has icons (SVG) that should be preserved
        const hasIcons = el.querySelector('svg, img, .icon');
        // Check if translation contains HTML tags
        const translationHasHtml = /<[^>]+>/.test(translation);
        // Check for styled spans that wrap text (common pattern: <span class="font-medium">Text</span>)
        const styledTextSpan = el.querySelector('span[class]');
        
        if (hasIcons) {
          // Element has icons - only update text nodes, preserve icons
          let replaced = false;
          const walker = document.createTreeWalker(el, NodeFilter.SHOW_TEXT);
          while (walker.nextNode()) {
            const node = walker.currentNode as Text;
            if (!replaced && node.textContent?.trim()) {
              node.textContent = translation;
              replaced = true;
            } else if (replaced && node.textContent?.trim()) {
              node.textContent = '';
            }
          }
        } else if (translationHasHtml) {
          // Translation contains HTML - use innerHTML directly
          el.innerHTML = translation;
        } else if (styledTextSpan && !styledTextSpan.querySelector('*')) {
          // Element has a styled span containing only text - update the span's content
          styledTextSpan.textContent = translation;
        } else {
          // Safe to replace innerHTML (plain text or simple structure)
          const hasNewlines = translation.includes('\n');
          if (hasNewlines) {
            el.innerHTML = translation.replace(/\n\n/g, '<br /><br />').replace(/\n/g, '<br />');
          } else {
            el.innerHTML = translation;
          }
        }
      }
    }
  });

  // Translate placeholder attributes
  document.querySelectorAll('[data-i18n-placeholder]').forEach(el => {
    const key = el.getAttribute('data-i18n-placeholder');
    if (key) {
      const translation = getTranslation(lang, key);
      if (translation) {
        el.setAttribute('placeholder', translation);
      }
    }
  });

  // Translate multilingual name elements (e.g., attorney names)
  // These use data-name-vi, data-name-en, data-name-zh, data-name-ja, data-name-ko
  document.querySelectorAll('.multilang-name').forEach(el => {
    const langKey = lang === 'zh-CN' ? 'zh' : lang;
    const localizedName = el.getAttribute(`data-name-${langKey}`);
    if (localizedName) {
      el.textContent = localizedName;
    }
  });

  // Translate header (using text-matching for navigation links)
  const header = document.querySelector('header');
  if (header) translateElement(header, lang, true);

  // Translate footer (using text-matching)
  const footer = document.querySelector('footer');
  if (footer) translateElement(footer, lang, true);

  // Translate navigation (using text-matching)
  document.querySelectorAll('nav').forEach(el => translateElement(el, lang, true));

  // Translate breadcrumbs
  document.querySelectorAll('nav[aria-label="Breadcrumb"]').forEach(el => translateElement(el, lang, true));

  // Remove loading class
  document.documentElement.classList.remove('i18n-loading');
}

function loadGoogleTranslate(targetLang: string): void {
  const win = window as any;

  // Ensure notranslate elements have translate="no" - include all i18n processed elements
  document.querySelectorAll('.notranslate, header, footer, nav, [data-i18n]').forEach(el => {
    el.setAttribute('translate', 'no');
    el.classList.add('notranslate');
  });

  if (document.querySelector('script[src*="translate.google.com"]')) {
    setTimeout(() => triggerTranslation(targetLang), 100);
    return;
  }

  win.googleTranslateElementInit = function() {
    try {
      new win.google.translate.TranslateElement({
        pageLanguage: 'vi',
        includedLanguages: 'en,zh-CN,ja,ko',
        autoDisplay: false,
        layout: win.google.translate.TranslateElement.InlineLayout.SIMPLE
      }, 'google_translate_element_hidden');

      let attempts = 0;
      const tryTrigger = () => {
        attempts++;
        if (attempts < 10) {
          try {
            triggerTranslation(targetLang);
          } catch (e) {
            // Ignore Google Translate internal errors
          }
          setTimeout(tryTrigger, 500);
        }
      };
      setTimeout(tryTrigger, 500);
    } catch (e) {
      console.warn('Google Translate init error:', e);
    }
  };

  const script = document.createElement('script');
  script.src = '//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit';
  script.async = true;
  document.head.appendChild(script);
}

function triggerTranslation(targetLang: string): void {
  const selectEl = document.querySelector('.goog-te-combo') as HTMLSelectElement;
  if (selectEl && selectEl.value !== targetLang) {
    selectEl.value = targetLang;
    selectEl.dispatchEvent(new Event('change', { bubbles: true }));
  }
}

