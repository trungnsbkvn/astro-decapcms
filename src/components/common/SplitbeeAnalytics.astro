---
export interface Props {
  doNotTrack?: boolean;
  noCookieMode?: boolean;
  url?: string;
  partytown?: boolean;
}

const { 
  doNotTrack = true, 
  noCookieMode = false, 
  url = 'https://cdn.splitbee.io/sb.js',
  partytown = false 
} = Astro.props;

const attrs = partytown ? { type: 'text/partytown' } : {};
---

<!-- Splitbee Analytics -->
<script is:inline data-respect-dnt={doNotTrack} data-no-cookie={noCookieMode} async src={url} {...attrs}></script>
