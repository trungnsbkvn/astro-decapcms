---
import type { Headline as Props } from '~/types';
import { twMerge } from 'tailwind-merge';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  classes = {},
  // i18n keys for translations
  i18nTagline,
  i18nTitle,
  i18nSubtitle,
} = Astro.props;

const {
  container: containerClass = 'max-w-3xl',
  title: titleClass = 'text-3xl md:text-4xl ',
  subtitle: subtitleClass = 'text-xl',
} = classes;
---

{
  (title || subtitle || tagline) && (
    <div class={twMerge('mb-8 md:mx-auto md:mb-12 text-center', containerClass)}>
      {tagline && (
        <p 
          class:list={["text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase", { "notranslate": i18nTagline }]}
          {...(i18nTagline ? { translate: "no", 'data-i18n': i18nTagline } : {})}
          set:html={tagline} 
        />
      )}
      {title && (
        <h2
          class:list={[twMerge('font-bold leading-tighter tracking-tighter font-heading text-heading text-3xl', titleClass), { "notranslate": i18nTitle }]}
          {...(i18nTitle ? { translate: "no", 'data-i18n': i18nTitle } : {})}
          set:html={title}
        />
      )}

      {subtitle && (
        <p 
          class:list={[twMerge('mt-4 text-muted', subtitleClass), { "notranslate": i18nSubtitle }]}
          {...(i18nSubtitle ? { translate: "no", 'data-i18n': i18nSubtitle } : {})}
          set:html={subtitle} 
        />
      )}
    </div>
  )
}
