---
// PERFORMANCE: Import font with ?url to get build-time hashed URL for preloading
import interLatinUrl from '@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url';
import interVieUrl from '@fontsource-variable/inter/files/inter-vietnamese-wght-normal.woff2?url';

// This import registers the font CSS
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<!-- PERFORMANCE: Preload critical fonts with dynamic build-time URLs -->
<link rel="preload" href={interLatinUrl} as="font" type="font/woff2" crossorigin="anonymous" />
<link rel="preload" href={interVieUrl} as="font" type="font/woff2" crossorigin="anonymous" />

<style is:inline>
  /* Ensure fonts use font-display: swap to prevent render blocking */
  @font-face {
    font-family: 'Inter Variable';
    font-display: swap;
  }
  
  :root {
    --aw-font-sans: 'Inter Variable', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --aw-font-serif: 'Inter Variable', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --aw-font-heading: 'Inter Variable', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --aw-font-serif: 'Inter Variable', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --aw-font-heading: 'Inter Variable', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  /* Google Translate Integration Styles */
  /* Hide Google Translate banner and branding */
  .goog-te-banner-frame {
    display: none !important;
  }

  .goog-te-gadget {
    font-size: 0 !important;
  }

  .goog-te-gadget .goog-te-combo {
    margin: 0 !important;
  }

  .goog-te-menu-value span:first-child {
    display: none;
  }

  .goog-te-menu-value:before {
    content: '' !important;
  }

  /* Hide Google Translate footer */
  .goog-te-gadget-icon {
    display: none !important;
  }

  /* Ensure notranslate elements are protected from translation */
  .notranslate {
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  [translate="no"] {
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  /* User content styling for Google Translate */
  .user-content {
    /* Allow Google Translate to work on these elements */
  }

  [data-user-content] {
    /* Allow Google Translate to work on these elements */
  }
</style>
