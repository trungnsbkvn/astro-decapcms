---
import { APP_BLOG } from 'astrowind:config';

import Grid from '~/components/blog/Grid.astro';

import { getBlogPermalink } from '~/utils/blog-permalinks';
import { findPostsByIds } from '~/utils/blog';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Widget } from '~/types';

export interface Props extends Widget {
  type?: string;
  title?: string;
  titleI18nKey?: string;
  linkText?: string;
  linkI18nKey?: string;
  linkUrl?: string | URL;
  information?: string;
  postIds: string[];
}

const {
  type,
  title = await Astro.slots.render('title'),
  titleI18nKey,
  linkText = 'Xem tất cả',
  linkI18nKey,
  linkUrl = getBlogPermalink(type || 'post'),
  information = await Astro.slots.render('information'),
  postIds = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const posts = await findPostsByIds(type || 'post', postIds);
---

{
  APP_BLOG.isEnabled ? (
    <WidgetWrapper id={id} isDark={isDark} containerClass={classes?.container as string} bg={bg}>
      <div class="flex flex-col lg:justify-between lg:flex-row mb-8 notranslate" translate="no">
        {title && (
          <div class="md:max-w-sm">
            <h2
              class="text-3xl font-semibold tracking-tight sm:text-4xl sm:leading-none group font-heading mb-2"
              data-i18n={titleI18nKey}
              set:html={title}
            />
            {APP_BLOG.list.isEnabled && linkText && linkUrl && (
              <a
                class="text-muted dark:text-slate-400 hover:text-primary transition ease-in duration-200 block mb-6 lg:mb-0"
                href={linkUrl}
                data-i18n={linkI18nKey}
              >
                {linkText} »
              </a>
            )}
          </div>
        )}

        {information && <p class="text-muted dark:text-slate-400 lg:text-sm lg:max-w-md" set:html={information} />}
      </div>

      <Grid posts={posts} />
    </WidgetWrapper>
  ) : (
    <Fragment />
  )
}
