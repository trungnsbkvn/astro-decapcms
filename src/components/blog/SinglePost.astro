---
import { Icon } from 'astro-icon/components';

import Image from '~/components/common/Image.astro';
import PostTags from '~/components/blog/Tags.astro';
import SocialShare from '~/components/common/SocialShare.astro';
import TableOfContents from '~/components/widgets/TableOfContents.astro';

import { getPermalink } from '~/utils/blog-permalinks';
import { getFormattedDate, getAuthorPermalink } from '~/utils/utils';
import { getCategoryI18nKey } from '~/utils/blog-seo';

import type { Post } from '~/types';
import type { ImageMetadata } from 'astro';

export interface Props {
  type: string;
  post: Post;
  url: string | URL;
}

const { type, post, url } = Astro.props;

const headings = post.headings;
const categoryI18nKey = post.category?.slug ? getCategoryI18nKey(post.category.slug) : null;

// Get image URL for structured data
const getImageUrl = (image: ImageMetadata | string | undefined): string => {
  if (!image) return 'https://yplawfirm.vn/assets/images/youth%20and%20partners/Youth%20and%20Partners.jpg';
  if (typeof image === 'string') return image.startsWith('http') ? image : `https://yplawfirm.vn${image}`;
  if (image?.src) return image.src.startsWith('http') ? image.src : `https://yplawfirm.vn${image.src}`;
  return 'https://yplawfirm.vn/assets/images/youth%20and%20partners/Youth%20and%20Partners.jpg';
};

// Article structured data for SEO - always include for blog posts
const articleStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: post.title,
  description: post.excerpt || '',
  image: getImageUrl(post.image),
  datePublished: post.publishDate?.toISOString(),
  ...(post.updateDate && { dateModified: post.updateDate.toISOString() }),
  author: {
    '@type': 'Person',
    name: post.author || 'Youth & Partners',
    url: post.author ? `https://yplawfirm.vn${getAuthorPermalink(post.author)}` : 'https://yplawfirm.vn',
  },
  publisher: {
    '@type': 'Organization',
    name: 'Youth & Partners Law Firm',
    logo: {
      '@type': 'ImageObject',
      url: 'https://yplawfirm.vn/assets/images/youth%20and%20partners/Youth%20and%20Partners.jpg',
      width: 800,
      height: 600,
    },
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': String(url),
  },
  ...(post.readingTime && { timeRequired: `PT${post.readingTime}M` }),
  ...(post.category && { articleSection: post.category.title }),
  ...(post.tags?.length && { keywords: post.tags.map(t => t.title).join(', ') }),
};

// Service/Product rating structured data (for posts with ratings)
const ratingStructuredData = post.rating
  ? {
      '@context': 'https://schema.org/',
      '@type': ['Service', 'Product'],
      brand: {
        '@type': 'Brand',
        name: 'Youth & Partners',
      },
      description: post.excerpt,
      image: getImageUrl(post.image),
      name: post.title,
      aggregateRating: {
        '@type': 'AggregateRating',
        ratingValue: post.rating,
        bestRating: 5,
        ratingCount: 100,
      },
    }
  : null;
---

<section
  class="px-5 sm:mx-auto sm:max-w-2xl sm:px-8 lg:px-0 antialiased md:max-w-6xl grid gap-12 mt-4 overflow-hidden md:overflow-visible"
>
  <article class="min-w-full md:py-4 sm:max-w-none md:max-w-none">
    <header
      class={post.image
        ? 'intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
        : 'intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'}
    >
      <div class="flex text-center justify-center flex-col sm:flex-row mx-auto mt-0 sm:items-center">
        <p class="text-opacity-50 text-sm">
          <Icon name="tabler:clock" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
          <time datetime={String(post.publishDate)} class="inline-block">{getFormattedDate(post.publishDate)}</time>
          {
            post.author && (
              <>
                &nbsp;{'·'}&nbsp;
                <Icon name="tabler:user" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
                <span class="notranslate" translate="no" data-i18n="post.author">Tác giả:</span>
                <a class="inline-block notranslate" translate="no" href={getAuthorPermalink(post.author)}>
                  <b>{post.author}</b>
                </a>
              </>
            )
          }
          {
            post.author != 'Luật sư Nguyễn Văn Thành' && (
              <>
                &nbsp;{'·'}&nbsp;
                <Icon name="tabler:user-check" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
                <span class="notranslate" translate="no" data-i18n="post.reviewedBy">Tham vấn bởi:</span>
                <a class="inline-block" href={getAuthorPermalink('Luật sư Nguyễn Văn Thành')}>
                  <b><span data-i18n="post.lawyerTitle">Luật sư</span> <span class="notranslate" translate="no">Nguyễn Văn Thành</span></b>
                </a>
              </>
            )
          }
          {
            post.category && (
              <>
                &nbsp;{'·'}&nbsp;
                <a 
                  class="hover:underline inline-block notranslate" 
                  translate="no"
                  href={getPermalink(post.category.slug, 'category', type)}
                  {...(categoryI18nKey ? { 'data-i18n': categoryI18nKey } : {})}
                >
                  {post.category.title}
                </a>
              </>
            )
          }
          {
            post.readingTime && (
              <>
                &nbsp;{'·'}&nbsp;
                <span>{post.readingTime}</span> <span class="notranslate" translate="no" data-i18n="post.readingTime">phút đọc</span>
              </>
            )
          }
        </p>
      </div>

      <h1
        class="text-center md:pb-2.5 font-semibold mt-2 mx-auto text-4xl md:text-4xl leading-tighter tracking-tighter font-heading user-content"
        data-user-content
        translate="yes"
      >
        {post.title}
      </h1>
      <p class="mx-auto mt-4 mb-8 text-lg md:text-lg text-muted dark:text-slate-400 text-justify user-content" data-user-content translate="yes">
        {post.excerpt}
      </p>
      <div class="grid grid-cols-1 md:grid-cols-[20%_auto] gap-10 mt-8">
        <div class="md:flex flex-col gap-4 hidden h-[450px]">
          <Image
            src="~/assets/images/youth and partners/Poster.png"
            class="w-full h-full sm:rounded-md bg-gray-400 dark:bg-slate-700 object-cover object-center"
            alt="Tư vấn pháp luật - Youth & Partners"
            width={220}
            height={450}
            widths={[220]}
            layout="cover"
            loading="eager"
            decoding="async"
            format="avif"
          />
        </div>
        <div class="max-w-full w-full h-[450px]">
          {
            post.image ? (
              <Image
                src={post.image}
                class="w-full h-full sm:rounded-md bg-gray-400 dark:bg-slate-700 object-cover object-center"
                alt={post?.excerpt || ''}
                width={880}
                height={450}
                widths={[480, 880]}
                sizes="(max-width: 768px) 480px, 880px"
                layout="cover"
                loading="eager"
                decoding="async"
                fetchpriority="high"
                format="avif"
              />
            ) : (
              <div class="mx-auto px-4 sm:px-6">
                <div class="border-t dark:border-slate-700" />
              </div>
            )
          }
        </div>
      </div>
    </header>
    <hr />
    <div class="grid grid-cols-1 md:grid-cols-[20%_auto] gap-10 mt-8">
      <!-- aside  -->
      <aside class="md:flex flex-col gap-4 hidden">
        <div class="sticky top-24 self-start hidden md:block transition-all duration-200">
          {headings && headings.length > 0 && <TableOfContents {headings} />}
        </div>
      </aside>
      <!-- post -->
      <article class="max-w-full w-full user-content" data-user-content translate="yes">
        <div
          class="mx-auto min-w-full prose prose-md dark:prose-invert dark:prose-headings:text-slate-300 prose-headings:font-heading prose-headings:mt-0 prose-headings:mb-4 prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-semibold prose-a:text-primary dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg prose-img:min-w-full prose-img:mb-0 prose-headings:scroll-mt-[90px] prose-li:my-0 text-justify"
        >
          <slot />
        </div>
        {
          post.rating && (
            <div class="mx-auto mt-8">
              <div class="flex items-center">
                <>
                  {[...Array(post.rating)].map(() => (
                    <Icon name="tabler:star" class="w-4 h-4 inline-block text-yellow-500" />
                  ))}
                  {[...Array(5 - post.rating)].map(() => (
                    <Icon name="tabler:star" class="w-4 h-4 inline-block text-gray-300" />
                  ))}
                </>
              </div>
            </div>
          )
        }
        <div class="mx-auto mt-8 flex justify-between flex-col sm:flex-row">
          <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" />
          <SocialShare
            url={url}
            text={post.title}
            class="mt-5 sm:mt-1 align-middle text-gray-500 dark:text-slate-600"
          />
        </div>
      </article>
    </div>
  </article>
</section>

<!-- Article structured data for better SEO -->
<script type="application/ld+json" set:html={JSON.stringify(articleStructuredData)} />
{ratingStructuredData && <script type="application/ld+json" set:html={JSON.stringify(ratingStructuredData)} />}

<script>
  const fnObserver = () => {
    function handleIntersection(entries: IntersectionObserverEntry[], _observer: IntersectionObserver) {
      entries.forEach((entry) => {
        const index = document.querySelector(`aside a[href="#${entry.target.id}"]`);

        if (entry.isIntersecting) {
          index?.classList.remove('bg-slate-200', 'dark:bg-slate-800'); // remove bg
          index?.classList.add(
            'bg-indigo-600',
            'dark:bg-indigo-700',
            'text-white',
            'transition-colors',
            'duration-200'
          );
        } else {
          index?.classList.add('bg-slate-200', 'dark:bg-slate-800'); // add bg
          index?.classList.remove(
            'bg-indigo-600',
            'dark:bg-indigo-700',
            'text-white',
            'transition-colors',
            'duration-200'
          );
        }
      });
    }

    const headings = document.querySelectorAll(
      'div.prose h1, div.prose h2, div.prose h3, div.prose h4, div.prose h5, div.prose h6'
    );

    const options = {
      root: null,
      rootMargin: ' 15% 0px 0% 0px ',
      threshold: 1,
    };

    const observer = new IntersectionObserver(handleIntersection, options);

    headings.forEach((heading) => {
      observer.observe(heading);
    });
  };
  fnObserver();
  document.addEventListener('astro:after-swap', fnObserver);
</script>
