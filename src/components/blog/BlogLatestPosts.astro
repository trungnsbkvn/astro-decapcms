---
import { APP_BLOG } from 'astrowind:config';

import Grid from '~/components/blog/BlogLatestGrid.astro';

import { findLatestBlogPosts } from '~/utils/blog';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Widget } from '~/types';
import { getRootPathForType } from '~/utils/blog-permalinks';

export interface Props extends Widget {
  title?: string;
  linkText?: string;
  linkUrl?: string | URL;
  information?: string;
  categories: Record<string, string[]>;
  count?: number;
  i18nTitle?: string;
  i18nInformation?: string;
}

const {
  title = await Astro.slots.render('title'),
  information = await Astro.slots.render('information'),
  categories,
  count = 6,
  
  i18nTitle,
  i18nInformation,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const posts = await findLatestBlogPosts(categories, count);

const typePosts = posts.map((post) => ({
  ...post,
  permalink: `${getRootPathForType(post.type)}/${post.permalink}`,
}));
---

{
  APP_BLOG.isEnabled ? (
    <WidgetWrapper id={id} isDark={isDark} containerClass={classes?.container as string} bg={bg}>
      <div class="flex flex-col lg:justify-between lg:flex-row mb-8">
        {title && (
          <div class="md:max-w-sm">
            <h2
              class="text-3xl font-bold tracking-tight sm:text-4xl sm:leading-none group font-heading mb-2 notranslate"
              translate="no"
              {...(i18nTitle ? { 'data-i18n': i18nTitle } : {})}
              set:html={title}
            />
          </div>
        )}

        {information && <p class="text-muted dark:text-slate-400 lg:text-sm lg:max-w-md notranslate" translate="no" {...(i18nInformation ? { 'data-i18n': i18nInformation } : {})} set:html={information} />}
      </div>

      <Grid posts={typePosts} />
    </WidgetWrapper>
  ) : (
    <Fragment />
  )
}
