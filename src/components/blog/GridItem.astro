---
import type { Post } from '~/types';

import Image from '~/components/common/Image.astro';

import { findImage } from '~/utils/images';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const image = await findImage(post.image);

const link = post.permalink;
---

<article
  class="mb-6 transition intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
>
  <div class="relative md:h-64 bg-gray-400 dark:bg-slate-700 rounded shadow-lg mb-6">
    {
      image &&
        (link ? (
          <a href={link}>
            <Image
              src={image}
              class="w-full md:h-full rounded shadow-lg bg-gray-400 dark:bg-slate-700 object-cover"
              widths={[320, 400]}
              width={400}
              height={254}
              sizes="(max-width: 640px) 320px, 400px"
              alt={post.title}
              layout="cover"
              loading="lazy"
              decoding="async"
              format="avif"
            />
          </a>
        ) : (
          <Image
            src={image}
            class="w-full md:h-full rounded shadow-lg bg-gray-400 dark:bg-slate-700 object-cover"
            widths={[320, 400]}
            width={400}
            height={254}
            sizes="(max-width: 640px) 320px, 400px"
            alt={post.title}
            layout="cover"
            loading="lazy"
            decoding="async"
            format="avif"
          />
        ))
    }
  </div>

  <h3 class="text-xl sm:text-2xl font-semibold leading-tight mb-2 font-heading dark:text-slate-300 notranslate" translate="no">
    {
      link ? (
        <a class="inline-block hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200" href={link}>
          {post.title}
        </a>
      ) : (
        post.title
      )
    }
  </h3>

  <p class="text-muted dark:text-slate-400 text-lg user-content" data-user-content translate="yes">{post.excerpt}</p>
</article>
