---
import '~/assets/styles/tailwind.css';

import { I18N } from 'astrowind:config';

import CommonMeta from '~/components/common/CommonMeta.astro';
import Favicons from '~/components/Favicons.astro';
import CriticalCSS from '~/components/common/CriticalCSS.astro';
import FontOptimization from '~/components/common/FontOptimization.astro';
import CustomStyles from '~/components/CustomStyles.astro';
import ApplyColorMode from '~/components/common/ApplyColorMode.astro';
import Metadata from '~/components/common/Metadata.astro';
import SiteVerification from '~/components/common/SiteVerification.astro';
import Analytics from '~/components/common/Analytics.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';
import Tawk from '~/components/common/Tawk.astro';
import EarlyTranslationScript from '~/components/common/EarlyTranslationScript.astro';
import TranslationNotice from '~/components/common/TranslationNotice.astro';
// import { ViewTransitions } from 'astro:transitions';

import type { MetaData as MetaDataType } from '~/types';

export interface Props {
  metadata?: MetaDataType;
  /** Disable Google Translate for this page (only use i18n) */
  disableGoogleTranslate?: boolean;
}

const { metadata = {}, disableGoogleTranslate = false } = Astro.props;
const { language, textDirection } = I18N;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[18px]" data-no-google-translate={disableGoogleTranslate ? '' : undefined}>
<head>
    <!-- Early Translation Script (must be first in head to prevent FOUC) -->
    <EarlyTranslationScript />
    
    <!-- Critical: Meta tags first for parser -->
    <CommonMeta />
    
    <!-- Critical CSS inlined to prevent render-blocking -->
    <CriticalCSS />
    
    <!-- Critical: Inline styles and fonts before external CSS -->
    <ApplyColorMode />
    <FontOptimization />
    <CustomStyles />
    
    <!-- Critical CSS hint: Help browser prioritize CSS -->
    <link rel="preconnect" href="/.netlify" crossorigin />
    
    <!-- External CSS (render-blocking but needed) -->
    <Favicons />
    
    <!-- SEO metadata -->
    <Metadata {...metadata} />
    <SiteVerification />
    
    <!-- Non-critical: Analytics (should be async) -->
    <Analytics />

    <!-- Google Translate global styles - MUST hide banner and fix body positioning -->
    <style is:global>
      /* Hide Google Translate banner and ALL UI elements */
      .goog-te-banner-frame,
      .skiptranslate,
      #goog-gt-tt,
      .goog-te-balloon-frame,
      div#goog-gt-,
      .goog-text-highlight,
      #google_translate_element,
      #google_translate_element_hidden,
      body > .skiptranslate,
      .goog-te-spinner-pos,
      .goog-te-gadget {
        display: none !important;
        height: 0 !important;
        visibility: hidden !important;
      }

      /* Fix body positioning - Google Translate adds top: 40px */
      body {
        top: 0 !important;
        position: static !important;
      }

      html.translated-ltr body,
      html.translated-rtl body {
        top: 0 !important;
      }

      /* Skip translation for specific elements */
      .notranslate,
      [translate="no"] {
        font-family: inherit !important;
      }
    </style>
  </head>

  <body class="antialiased text-default bg-page tracking-tight">
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary focus:text-white focus:rounded-md">Chuyển đến nội dung chính</a>
    
    <slot />

    <!-- Translation Notice (shows at bottom when Google Translate is active) -->
    <TranslationNotice autoDismissSeconds={3} />

    <BasicScripts />
    <Tawk />
  </body>
</html>
