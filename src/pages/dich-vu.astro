<Layout metadata={metadata}>
  <Hero
    id="hero"
    title="Dịch vụ pháp lý chuyên môn"
    tagline="Youth & Partners"
    actions={[{ variant: 'primary', text: 'Liên hệ với chúng tôi', href: getPermalink('/lien-he#form') }]}
