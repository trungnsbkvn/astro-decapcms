---
import type { GetStaticPaths } from 'astro';
import Layout from '~/layouts/PageLayout.astro';
import BlogList from '~/components/blog/List.astro';
import Headline from '~/components/blog/Headline.astro';
import Pagination from '~/components/blog/Pagination.astro';

import { blogCategoryRobots, getStaticPathsForCategoryPagination } from '~/utils/blog';
import { getRootPathForType } from '~/utils/blog-permalinks';
import { getBlogTypeSEO, getCategorySEO, getCategoryDescription, getKeywordsString, getCategoryI18nKeys } from '~/utils/blog-seo';
import { t } from '~/i18n';

// Pre-render all category pagination pages at build time
export const prerender = true;

export const getStaticPaths: GetStaticPaths = async () => {
  return await getStaticPathsForCategoryPagination('consultation');
};

const TYPE = 'consultation';
const ROOT_PATH = '/tu-van-thuong-xuyen';

const { category: categorySlug, page } = Astro.params;
const pageNumber = parseInt(page, 10);
const { posts: rawPosts, totalPages, currentPage, category } = Astro.props;

const blogSEO = getBlogTypeSEO(TYPE);
const categorySEO = getCategorySEO(TYPE, categorySlug);

const posts = rawPosts.map((post: any) => ({
  ...post,
  permalink: `${getRootPathForType(post.type || TYPE)}/${post.permalink}`,
}));
const prevUrl = pageNumber === 2 ? `${ROOT_PATH}/${categorySlug}` : `${ROOT_PATH}/${categorySlug}/${pageNumber - 1}`;
const nextUrl = pageNumber < totalPages ? `${ROOT_PATH}/${categorySlug}/${pageNumber + 1}` : undefined;

// Get i18n keys from centralized mapping
const i18nKeys = getCategoryI18nKeys(categorySlug);

// Use i18n translation for initial Vietnamese render, fallback to CMS data
const categoryTitle = i18nKeys ? t(i18nKeys.title, 'vi') : ((category as any)?.title || categorySlug);
const categorySubtitle = i18nKeys ? t(i18nKeys.subtitle, 'vi') : `Tất cả bài viết trong danh mục ${categoryTitle}`;

const metadata = {
  title: categorySEO?.title 
    ? `${categorySEO.title} - Trang ${pageNumber} - ${blogSEO.title}`
    : `Danh mục: ${categoryTitle} - Trang ${pageNumber}`,
  description: getCategoryDescription(TYPE, categorySlug, categoryTitle, pageNumber),
  keywords: categorySEO ? getKeywordsString(categorySEO.keywords) : getKeywordsString(blogSEO.keywords),
  robots: {
    index: false,
    follow: blogCategoryRobots?.follow,
  },
  openGraph: {
    type: 'article',
  },
};
---

<Layout metadata={metadata}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline 
      subtitle={categorySubtitle}
      i18nTitle={i18nKeys?.title}
      i18nSubtitle={i18nKeys?.subtitle}
    >
      {categoryTitle}
    </Headline>
    <BlogList posts={posts} />
    <Pagination prevUrl={prevUrl} nextUrl={nextUrl} />
  </section>
</Layout>
